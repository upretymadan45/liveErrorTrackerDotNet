@model Error

<div class="container">
    <h2 class="text-center" style="border-bottom:1px dotted grey;">Resolve Error</h2>

    <div class="row">
        <div class="col-6" style="border-right:1px solid grey;">
            <ul class="list-group">
                <li class="list-group-item active">Error Details</li>
                <li class="list-group-item">
                    <span class="badge badge-success m-2">Error:</span> @Model.ErrorMessage
                </li>
                <li class="list-group-item">
                    <span class="badge badge-success m-2">Error Path:</span>@Model.ErrorPath
                </li>
                <li class="list-group-item" style="overflow:scroll; height:400px;">
                    <span class="badge badge-success m-2">Stack Trace:</span>@Model.StackTrace
                </li>
            </ul>
        </div>
        <div class="col-6">
            <form asp-action="Resolve" method="Post" controller="Home">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="10" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResolvedBy"></label>
                    <input type="text" class="form-control" asp-for="ResolvedBy"/>
                    <span asp-validation-for="ResolvedBy" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary btn-block" value="Resolve"/>
                <a asp-action="Index" class="btn btn-danger btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>
